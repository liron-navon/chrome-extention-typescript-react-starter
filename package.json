{
  "name": "chrome-extention-typescript-react-starter",
  "version": "0.0.2",
  "description": "Boilerplate for creating a Chrome Extention with React, TypeScript, emotion jss, jest and Webpack",
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "main": "src/index.tsx",
  "scripts": {
    "build:test": "jest && webpack",
    "build": "NODE_ENV=development webpack",
    "build:production": "NODE_ENV=production webpack",
    "build:beta": "NODE_ENV=beta webpack",
    "dev": "webpack-dev-server -w --hot --inline --progress --history-api-fallback --port 9123",
    "devtest": "jest --watch",
    "test": "jest"
  },
  "keywords": [],
  "author": "Thomas St Pierre <thomas.j.stpierre@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/enzyme": "^3.1.11",
    "babel-plugin-emotion": "^9.2.5",
    "emotion": "^9.2.5",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.5"
  },
  "devDependencies": {
    "@types/chrome": "0.0.69",
    "@types/jest": "^23.1.4",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "@types/react-test-renderer": "^15.4.1",
    "babel": "^6.5.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.26.1",
    "enzyme": "^3.3.0",
    "enzyme-to-json": "^3.3.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-webpack-harddisk-plugin": "0.0.2",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.3.0",
    "jest-cli": "^23.3.0",
    "noop-webpack-plugin": "^1.0.1",
    "react-hot-loader": "^1.3.1",
    "react-test-renderer": "^15.4.2",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "ts-jest": "^23.0.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "write-file-webpack-plugin": "^4.3.2",
    "zip-webpack-plugin": "^3.0.0"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage/",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "popup(.*)$": "<rootDir>/src/popup/$1",
      "background(.*)$": "<rootDir>/src/background/$1"
    },
    "testRegex": "/tests/.*\\.(ts|tsx|js|jsx)$",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
