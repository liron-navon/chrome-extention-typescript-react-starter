{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "forin": false,
    "semicolon": [
      true,
      "never"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-line-length": [
      true,
      2000
    ],
    "object-curly-spacing": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      "always"
    ],
    "no-var-requires": false
  }
}
